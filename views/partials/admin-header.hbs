                </div>


                {{else}}{{#if createAccout}}
                <a href="/admin" style="text-decoration: none;">
                    <div class="admin-header-login">
                        <i style="font-size: 18px;" class="bi bi-house-door-fill"></i>
                        <h4 class="create-fest">Home</h4>
                    </div>
                </a>
               
                {{/if}}{{/if}}
            </div>

        </div>
    </div>
</section>


<script>
    let content = document.getElementById('dorpdown-content')
    function showDropdown() {
      
        content.style.display = 'block'
        setTimeout(hideDrop, 4000)
    }
    
    function hideDrop() {
      
        content.style.display = "none"
    }
</script>
