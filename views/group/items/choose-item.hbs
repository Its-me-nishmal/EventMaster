<section>
    <div class="group-container">
        <div class="allGroupStudents-mainDiv">
            <div class="GroupAllCategory-header">
                <h4 class="adminHome-sectin-one-SubHeading"><a href="/group/events/{{Category}}/{{SubCategory}}/all-events/{{EventId}}-{{EventName}}/all-students"><span
                            class="back-button" style="background-color: var(--color-blueDark2);"><i
                                class="bi bi-chevron-left"></i> Back</span></a>Choose Item</h4>
                <hr class="GroupallCategoryheader-hr">
            </div>
        </div>
        <div class="GroupAllStudents-content">
          {{#if GroupDetails.ChooseItem}}
     
            <div class="AddGroupStudetns-Div">
                <form action="/group/items/{{Category}}/{{SubCategory}}/choose-item" method="POST">
                    <div class="addStudetns-form">
                        <div> <label for="">Category :</label></div>
                        <div><input type="text" name="Category" value="{{Category}}" readonly
                                style="cursor: not-allowed; background-color:rgb(211, 211, 211)"></div>
                    </div>
                    <div class="addStudetns-form">
                        <div> <label for="">Sub-Cate :</label></div>
                        <div><input type="text" name="SubCategory" value="{{SubCategory}}" readonly
                                style="cursor: not-allowed;  background-color:rgb(211, 211, 211)"></div>
                    </div>
                    <div class="addStudetns-form">
                        <div> <label for="">Item ID :</label></div>
                        <div><input type="text" name="ItemId" value="{{ItemId}}" readonly
                                style="cursor: not-allowed;  background-color:rgb(211, 211, 211)"></div>
                    </div>
                    <div class="addStudetns-form">
                        <div> <label for="">Name :</label></div>
                        <div><input type="text" name="ItemName" value="{{ItemName}}" readonly
                                style="cursor: not-allowed;  background-color:rgb(211, 211, 211)"></div>
                    </div>

                    <input type="text" name="EventId" value="{{Group.EventId}}" hidden>
                    <input type="text" name="GroupId" value="{{Group.GroupId}}" hidden>

                    <div class="addStudetns-form">
                        <div> <label for="">Chest No :</label></div>
                        <div><input type="number" autofocus name="ChestNo" placeholder="type here..." required></div>
                    </div>
                    <div class="addStudetns-form-Button">
                        <button type="submit">Submit</button>
                    </div>
                </form>
            </div>
            {{else}}
                   <div class="GroupStudentsZero">
                <div class="pointTabel-div">
                    <div class="pointTable-IconDiv">
                        <i class="bi bi-hourglass-bottom"></i>
                    </div>
                    <p>Time end</p>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</section>

<script>
    var current = document.getElementById('G-Events').className = "nav-links-a nav-links-active"
</script>