<section>
    <div class="group-container">
        <div class="allGroupStudents-mainDiv">
            <div class="GroupAllCategory-header">
                <h4 class="adminHome-sectin-one-SubHeading"><a href="/group/students"><span class="back-button"
                            style="background-color: var(--color-blueDark2);"><i class="bi bi-chevron-left"></i>
                            Back</span></a>{{Category}} Students</h4>
                <hr class="GroupallCategoryheader-hr">
            </div>
        </div>
        <div class="GroupAllStudents-content">


            {{#if AllStudents.[0]}}
            <div class="GroupStudents-Table-content">
                {{#if GroupDetails.CreateStudent}}
                <div class="allStudents-SessionOne">
                    <p>Create new Student :</p>
                    <a href="/group/students/{{Category}}/add-students"><button><i class="bi bi-plus-circle-dotted"></i>
                            Add</button></a>

                </div>
                {{/if}}
                <div class="allStudents-SessionTwo">
                    <table id="AllStudents" class="auto-index ">
                        <thead>
                            <tr>
                                <th class="StudentsTable-TR-Slno">Sl no</th>
                                <th class="StudentsTable-TR-ChestNo">Chest No</th>
                                <th class="StudentsTable-TR-CIC">CIC No</th>
                                <th class="StudentsTable-TR-Name">Full name</th>
                                <th class="StudentsTable-TR-Control">Control</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each AllStudents}}
                            <tr>
                                <td class="StudentsTable-TD-Slno"></td>
                                <td class="StudentsTable-TD-ChestNo">{{this.ChestNo}}</td>
                                <td class="StudentsTable-TD-CIC">{{this.CicNo}}</td>
                                <td class="StudentsTable-TD-Name">{{this.Name}}</td>
                                <td class="StudentsTable-TD-Control">
                                    <a title="View student"
                                        href="/group/students/{{../Category}}/{{this.ChestNo}}/view"><i
                                            class="bi bi-eye-fill"></i></a>
                                    {{#if ../GroupDetails.EditStudent}}
                                    <a title="Edit Student" style="background-color: var(--color-edit);  "
                                        href="/group/students/{{../Category}}/{{this.ChestNo}}/edit"><i
                                            class="bi bi-pencil-square"></i></a>
                                    {{else}}
                                    <a title="Edit option hide"
                                        style="background-color: var(--color-edit);opacity:0.3;cursor: not-allowed; "><i
                                            class="bi bi-pencil-square"></i></a>
                                    {{/if}}
                                    <a title="Delete student"
                                        onclick="return confirm('Are you want to delete - {{this.Name}} ?')"
                                        href="/group/students/{{../Category}}/{{this.ChestNo}}/delete"
                                        style="background-color:var(--color-delete)"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
            <div style="margin-top: 10px;">
                <div class="pointTable-printbutton">
                    <button class="print-button" onclick="PrintDiv('print-container','nsaonline.in')"><i
                            class="bi bi-printer-fill"></i>
                        Print</button>
                    <button style="background-color: black;" class="print-button"
                        onclick="PrintDiv('print-containe','nsaonline.in')"><i class="bi bi-printer-fill"></i>
                        Print with Events</button>
                </div>
                <h5 style="text-align: center; margin-top:5px"><span style="color: red; font-size:17px">*</span> Save
                    your PDF in print
                    option</h5>
            </div>
            {{else}} {{#if GroupDetails.CreateStudent}}
            <div class="GroupStudentsZero">
                <div class="pointTabel-div">

                    <p>You have not added any students...</p>
                    {{#if StudentActiveNull}}
                    <button style="background-color:var(--color-delete);"><i class="bi bi-hourglass-bottom"></i> Time
                        end </button>
                    {{else}}
                    <a href="/group/students/{{Category}}/add-students">
                        <button><i class="bi bi-plus-circle-dotted"></i> Create</button>
                    </a>
                    {{/if}}
                </div>
            </div>
            {{else}}
            <div class="GroupStudentsZero">
                <div class="pointTabel-div">
                    <div class="pointTable-IconDiv">
                        <i class="bi bi-hourglass-top"></i>
                    </div>
                    <p>Pleace Wait... <br> Create Student Option not enabled</p>
                </div>
            </div>
            {{/if}}{{/if}}


        </div>

    </div>
</section>


