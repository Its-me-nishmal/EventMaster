<section>
    <div class="group-container">
        <div class="allCategory-mainDiv">
            <div class="GroupAllCategory-header">
                <h4 class="adminHome-sectin-one-SubHeading">Students / All Category</h4>
                <hr class="GroupallCategoryheader-hr">
            </div>
            <div class="allCategory-content">
                {{#each category}}
                {{#if this.Status}}
                <a id="mainDiv" href="/group/students/{{this.CategoryName}}">
                    <div class="allGroupCatetory-items">
                        <h4>{{this.CategoryName}}</h4>
                        <p>{{StudentsCount}}</p>
                    </div>
                </a>
                {{/if}}
                {{/each}}
                 {{#if NullItemStudents}}
                 <a id="mainDiv" href="/group/students/students-without-item">
                    <div class="allGroupCatetory-items">
                        <h4><i style="font-size: 18px; margin-right:5px;" class="bi bi-folder-x"></i> Student without item</h4>
                        <p>{{NullItemStudents}}</p>
                    </div>
                </a>
                {{/if}} 
            </div>

        </div>
    </div>
</section>


