                                        <div class="Students-setting-Input-Event">
                                            <a href="/event/{{Event.EventId}}/logout">
                                                <button style="background-color: var(--color-delete);"><i
                                                        class="bi bi-box-arrow-right"></i> LogOut</button>
                                            </a>
                                        </div>
                                    </div>
                                    {{!-- --}}
                                    <div style="border-color: gray;" class="cotrolpanel-items">
                                        <label for=""> Delete Event
                                        </label>
                                        <div class="Students-setting-Input-Event">
                                            <a href="/event/{{Event.EventId}}/event-settings/delete-event">
                                                <button
                                                    onclick="return confirm('Are you want to delete - {{Event.Name}} -  event ?')"
                                                    style="background-color: var(--color-delete);"><i
                                                        class="bi bi-trash"></i> Delete</button>
                                            </a>
