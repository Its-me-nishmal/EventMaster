<section>
    <div class="fest-container">
        <div class="pointTable-mainDiv">
            <div class="pointTable-header">
                <h4 class="adminHome-sectin-one-SubHeading">Point category table</h4>
                <hr>
            </div>
            <div class="pointTable-content">
                {{#if categoryNull}}
                <div class="pointTable-nodataDiv">
                    <div class="pointTabel-div">
                        <div class="pointTable-IconDiv">
                            <i class="bi bi-emoji-frown"></i>
                        </div>
                        <p>You have not created any point category...</p>
                        <a href="/admin/{{FestDetails.FestId}}/point-table/add-table">
                            <button><i class="bi bi-plus-circle-dotted"></i> Create point category</button>
                        </a>
                    </div>
                </div>
                {{else}}

                {{#if categoryError}}
                <div id="close" class="Alert-box-border">
                    <div>
                        <div class="Alert-box-close-button">
                            <i class="bi bi-x-lg" onclick="closeAlet()"></i>
                        </div>
                        <div class="Alert-box-header">
                            <i class="bi bi-exclamation-circle"></i>
                            <h4>Error !</h4>
                        </div>
                        <div class="alert-box-content">
                            <h5>this category name already created !</h5>
                        </div>
                        <audio autoplay hidden src="/audio/alert/error alert.mp3"></audio>

                    </div>
                </div>
                {{/if}}
                {{#if eventError}}
                <div id="close" class="Alert-box-border">
                    <div>
                        <div class="Alert-box-close-button">
                            <i class="bi bi-x-lg" onclick="closeAlet()"></i>
                        </div>
                        <div class="Alert-box-header">
                            <i class="bi bi-exclamation-circle"></i>
                            <h4>Error !</h4>
                        </div>
                        <div class="alert-box-content">
                            <h5>{{ eventError}}</h5>
                        </div>
                        <audio autoplay hidden src="/audio/alert/error alert.mp3"></audio>

                    </div>
                </div>
                {{/if}}

                <div class="pointTable-addButton">
                    <p>Create new point table :</p>
                    <a href="/admin/{{FestDetails.FestId}}/point-table/add-table">
                        <button><i class="bi bi-plus-circle-dotted"></i> Add</button>
                    </a>
                </div>
                <div class="pointTable-all">
                    <table id="pointTable" class="auto-index">
                        <thead>
                            <tr>
                                <th rowspan="2" style="vertical-align : middle;text-align:center;">Sl.No.</th>
                                <th rowspan="2" style="vertical-align : middle;text-align:center;">Name</th>
                                <th colspan="3" style="horizontal-align : middle;text-align:center; ">Place
                                </th>
                                <th colspan="3" style="horizontal-align : middle;text-align:center; ">Grade
                                </th>
                                <th rowspan="2" style="horizontal-align : middle;text-align:center; ">Delete
                                </th>

                            </tr>
                            <tr>
                                <th>1st</th>
                                <th>2nd</th>
                                <th>3rd</th>
                                <th>A</th>
                                <th>B</th>
                                <th>C</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each allPointCategory}}
                            <tr>
                                <td></td>
                                <td>{{this.categoryName}}</td>
                                <td>{{this.places.One}}</td>
                                <td>{{this.places.Two}}</td>
                                <td>{{this.places.Three}}</td>
                                <td>{{this.grades.A}}</td>
                                <td>{{this.grades.B}}</td>
                                <td>{{this.grades.C}}</td>
                                <td><a href="/admin/{{this.FestId}}/point-table/delete/{{this.categoryName}}"
                                        onclick="return confirm('Are you want to delete - {{this.categoryName}} -  category ?')"><button
                                            class="pointCateoryDeletButton"> <i class="bi bi-trash"></i></button></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="pointTable-printbutton">
                    <button class="print-button" onclick="PrintDiv('print-container','nsaonline.in')"><i
                            class="bi bi-printer-fill"></i>
                        Print</button>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

