<section>
    <div class="fest-container">
        <div class="evets-MainDiv">
            <div class="pointTable-header">
                <h4 class="adminHome-sectin-one-SubHeading"><a href="/fest-admin/{{FestDetails.FestId}}/settings"><span
                            class="back-button"><i class="bi bi-chevron-left"></i>
                            Back</span></a> All Build grand topper</h4>
                <hr>
            </div>
            <div class="events-content">
                {{#if GrandTopper.[0]}}
                <div style="margin-bottom: 10px;" class="pointTable-addButton">
                    <p>Build Grand topper :</p>
                    <a href="/fest-admin/{{FestDetails.FestId}}/settings/grand-topper/create">
                        <button><i class="bi bi-plus-circle-dotted"></i> Add</button>
                    </a>
                </div>
                {{#each GrandTopper}}
                <div class="events-content">
                    <a href="/fest-admin/{{../FestDetails.FestId}}/settings/grand-topper/{{this.TopperId}}/view">
                        <div class="eventHeaderDiv">

                            <h4>{{this.Title}} </h4>
                            <span style="background:none; color:rgb(34, 34, 34); font-style:italic">
                                {{#if PointCategory}}
                                / PointCategory
                                {{/if}}
                                {{#if Place}}
                                / Place
                                {{/if}}
                                {{#if Grade}}
                                / Grade
                                {{/if}}
                                {{#if SessionType}}
                                / Session Type
                                {{/if}}
                                {{#if EventType}}
                                / Event Type
                                {{/if}}
                                {{#if StageType}}
                                / Stage Type
                                {{/if}}
                                
                            </span>

                        </div>
                    </a>

                </div>
                {{/each}}


                {{else}}

                <div class="pointTable-nodataDiv">
                    <div class="pointTabel-div">
                        <div class="pointTable-IconDiv">
                            <i class="bi bi-emoji-frown"></i>
                        </div>
                        <p>You have not build any grand topper ...</p>
                        <a href="/fest-admin/{{FestDetails.FestId}}/settings/grand-topper/create">
                            <button><i class="bi bi-plus-circle-dotted"></i> Build Grand topper</button>
                        </a>
                    </div>
                </div>


                {{/if}}
            </div>
        </div>
    </div>
</section>

<script>
    var current = document.getElementById('settings').className = "sidebarmenus sidebarmenus-active"

</script>